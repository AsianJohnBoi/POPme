{
	 "manifest_version": 2,
	 "name": "Popme",
	 "description": "Make any video or picture in to a new popup window. Allowing you to watch a video while doing another task or read a picture while studying",
	 "version": "1",
	 "author": "Tri-hrds",
	 "permissions": [
	 		"storage",
	 		"notifications",
	 		// "activeTab", 
	 		"contextMenus"
	 	],
	 "icons": {
	 	"128": "picpop128.png",
	 	"48": "picpop48.png",
	 	"16": "picpop16.png"
	},
	 "browser_action": {
	   "default_icon": "picpop16.png",
	   "default_title": "Have a good day",
	   "default_popup": "popup.html",
	   "title": "Your Browser Action Name"
	},
	"chrome_url_overrides" : {
	  // "newtab": "newtab.html"
	},

	"background": {
		"scripts": ["eventPage.js", "background.js"],
		"persistent": false
	}
}